---
import { sequence } from "astro:middleware";

const { title, slug, hero, description } = Astro.props;
---

<a class="mx-auto" href={"/projects/" + slug}>
    <div
        class="max-w-screen-2xl mx-auto border border-gray-600 w-full px-6 py-12 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 rounded-xl shadow-lg hover:scale-103 transition-transform duration-150 hover:shadow-xl cursor-pointer"
    >
        <div class="flex flex-col md:flex-row items-center gap-10">
            <!-- Project Image -->
            <div class="w-full md:w-1/2">
                <img
                    src={hero}
                    alt={title + " preview"}
                    class="rounded-lg w-full h-auto object-cover shadow-md"
                />
            </div>

            <!-- Project Info -->
            <div class="w-full md:w-1/2 text-white flex flex-col gap-5">
                <h2 class="text-4xl font-bold">{title}</h2>
                <p class="text-gray-400 text-xl leading-relaxed">{description}</p>

                <!-- Tech Stack Icons -->
            </div>
        </div>
    </div>
</a>
