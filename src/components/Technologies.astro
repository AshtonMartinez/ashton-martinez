---

<section
    class="max-w-screen-2xl mx-auto w-full py-12 px-4 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 rounded-xl shadow-lg"
>
    <div class="flex flex-col md:flex-row w-full gap-8 justify-around my-8">
        <div class="flex flex-col gap-6 w-full md:w-1/2">
            <h2 class="text-white text-4xl text-center font-bold mb-2">
                Frontend
            </h2>
            <div class="flex flex-wrap gap-8 justify-center">
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-blue-400 mb-2"
                    >
                        React
                    </p>
                    <img
                        src="react-icon.png"
                        alt="React Logo"
                        class="h-20 mb-2"
                    />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-green-400 mb-2"
                    >
                        Vue
                    </p>
                    <img src="vue.png" alt="Vue.js Logo" class="h-20 mb-2" />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-teal-400 mb-2"
                    >
                        Tailwind
                    </p>
                    <img
                        src="tailwind.png"
                        alt="Tailwind CSS Logo"
                        class="h-20 mb-2"
                    />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-blue-600 mb-2"
                    >
                        Typescript
                    </p>
                    <img
                        src="typescript.png"
                        alt="TypeScript Logo"
                        class="h-20 mb-2"
                    />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-yellow-600 mb-2"
                    >
                        Javascript
                    </p>
                    <img
                        src="javascript.png"
                        alt="JavaScript Logo"
                        class="h-20 mb-2"
                    />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-purple-950 mb-2"
                    >
                        Astro
                    </p>
                    <img src="astro.png" alt="Astro Logo" class="h-20 mb-2" />
                </div>
            </div>
        </div>
        <div class="flex flex-col gap-6 w-full md:w-1/2">
            <h2 class="text-white text-4xl text-center font-bold mb-2">
                Backend
            </h2>
            <div class="flex flex-wrap gap-8 justify-center">
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-indigo-400 mb-2"
                    >
                        PHP
                    </p>
                    <img src="php.png" alt="PHP Logo" class="h-20 mb-2" />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold slate-800 mb-2"
                    >
                        Next
                    </p>
                    <img src="next.png" alt="Next.js Logo" class="h-20 mb-2" />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-green-400 mb-2"
                    >
                        Node
                    </p>
                    <img src="node.png" alt="Node.js Logo" class="h-20 mb-2" />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-red-400 mb-2"
                    >
                        Laravel
                    </p>
                    <img
                        src="laravel.png"
                        alt="Laravel Logo"
                        class="h-20 mb-2"
                    />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-indigo-400 mb-2"
                    >
                        PostgreSQL
                    </p>
                    <img
                        src="postgres.png"
                        alt="PostgreSQL Logo"
                        class="h-20 mb-2"
                    />
                </div>
                <div
                    class="bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col items-center transition-transform hover:scale-105 hover:shadow-2xl w-48"
                >
                    <p
                        class="text-2xl text-center font-semibold text-blue-400 mb-2"
                    >
                        Docker
                    </p>
                    <img
                        src="docker.webp"
                        alt="Docker Logo"
                        class="h-20 mb-2"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
