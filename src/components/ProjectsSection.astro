---
import ProjectCard from "./ProjectCard.astro";
import { getCollection } from "astro:content";
const projects = await getCollection("projects");
---

<div class="flex flex-col gap-20 p-20">
    <h2 class="text-5xl font-bold mb-4 text-center text-white">Projects</h2>
    {
        projects.map((project) => (
            <ProjectCard title={project.data.title} slug={project.data.slug} hero={project.data.heroImage} description={project.data.description} />
        ))
    }
 
  
    
</div>
